<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodel.ViewModelActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_create_withsimplefactory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用简单工厂创建Viewmodel"/>
        <Button
            android:id="@+id/btn_create_withandroidfactory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用安卓工厂创建Viewmodel"/>
        <Button
            android:id="@+id/btn_create_withsimplefactory_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用自定义简单工厂创建Viewmodel"/>
        <Button
            android:id="@+id/btn_create_withandroidfactory_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用安卓自定义工厂创建Viewmodel"/>
        <Button
            android:id="@+id/btn_viewmodel_clear"
            android:layout_width="match_parent"
            android:text="观察屏幕旋转的时候，viewmodel.clear的调用情况"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_create_with_entrustviewmodel"
            android:layout_width="match_parent"
            android:text="使用委托机制创建viewmodel"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>